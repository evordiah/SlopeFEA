<Window x:Class="SlopeFEA.VerifyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Verify Input" Height="300" Width="500" MinHeight="300" MinWidth="500"
        Background="WhiteSmoke" WindowStyle="ToolWindow"
        Topmost="False" 
        WindowStartupLocation="CenterOwner" 
        ShowInTaskbar="False" >
    <Grid>
        <ListBox Height="200" HorizontalAlignment="Center" Margin="0,-30,0,0" Name="verifyMessages" VerticalAlignment="Center" Width="450" VerticalContentAlignment="Top" FontSize="11" />
        <Button Content="Close" Height="23" HorizontalAlignment="Center" Margin="70,215,0,0" Name="close" VerticalAlignment="Center" Width="60" IsCancel="True" IsDefault="False" />
        <Button Content="Verify" Height="23" HorizontalAlignment="Center" Margin="-70,215,0,0" Name="verify" VerticalAlignment="Center" Width="60" IsCancel="False" IsDefault="True" Click="verify_Click" />
    </Grid>
</Window>
