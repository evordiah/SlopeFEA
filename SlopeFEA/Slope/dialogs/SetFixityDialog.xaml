<Window x:Class="SlopeFEA.SetFixityDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set Fixity"
        Background="WhiteSmoke"
        Height="150"
        Width="250"
        MinHeight="150"
        MinWidth="250"
        Topmost="False" 
        WindowStartupLocation="CenterOwner" 
        ShowInTaskbar="False" 
        ResizeMode="CanResize"
        WindowStyle="ToolWindow">
    <Grid>
        <CheckBox Content="Vertical Roller (Horizontally Fixed)" Height="16" HorizontalAlignment="Center" Margin="0,-50,0,0" Name="isFixedX" VerticalAlignment="Center" />
        <CheckBox Content="Horizontal Roller (Vertically Fixed)" Height="16" HorizontalAlignment="Center" Margin="0,-10,0,0" Name="isFixedY" VerticalAlignment="Center" />
        <Button Content="OK" Height="23" HorizontalAlignment="Center" Margin="-70,60,0,0" Name="ok" VerticalAlignment="Center" Width="60" Click="ok_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Center" Margin="70,60,0,0" Name="cancel" VerticalAlignment="Center" Width="60" IsCancel="True" />
    </Grid>
</Window>
